{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "import/no-named-as-default": ["off"],
    "no-await-in-loop": ["off"],
    "no-use-before-define": ["error", { "functions": false }]
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "artifacts": true,
    "contract": true,
    "assert": true,
    "web3": true
  }
}
